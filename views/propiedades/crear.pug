extends ../layout/index.pug

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido

    div(class="py-20")
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span(class="font-normal") Raices  
        h2(class="text-center text-2xl font-extrabold")= pagina

        if error
            p(class="text-center p-3 uppercase bg-red-600 text-white font-bold mt-3") Hubo un error

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(action="" class="space-y-8") 
                div(class="space-y-5")
                    h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General
                    p(class="text-gray-600") AÃ±ade Informacion sobre la propiedad en venta

                div 
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="titulo") Titulo de anuncio
                    input(type="text" id="titulo" placeholder="Titulo propiedad, ej. Casa en la playa" name ="titulo" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )

                div 
                    label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="titulo") Descripcion
                    textarea(id="descripcion"  placeholder="Descripcion de la propiedad" name ="descripcion" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                
                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                    div(class="md:w-full")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="categoria") Categoria
                        select(id="categoria" name ="categoria" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                            option(value="") - Seleccione -
                                if categorias
                                    each categoria in categorias
                                        option(value=categoria.id) #{categoria.nombre}   
                                
      
                    div(class="md:w-full")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="precio") Precio
                        select(id="precio" name ="precio" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                            option(value="") - Seleccione -
                                if precios
                                    each precio in precios
                                        option(value=precio.id) #{precio.nombre}
                
                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                    div(class="md:w-full")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="habitaciones") Habitaciones
                        select(id="habitaciones" name ="habitaciones" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                            option(value="") - Seleccione - 
                            - var n = 1;
                                while n<5
                                    option(value=n) #{n++}   

                    div(class="md:w-full")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="estacionamiento") Estacionamiento
                        select(id="estacionamiento" name ="estacionamiento" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                            option(value="") - Seleccione - 
                            - var n = 1;
                                while n<5
                                    option(value=n) #{n++} 

                    div(class="md:w-full")
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="wc") WC
                        select(id="wc" name ="wc" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                            option(value="") - Seleccione - 
                            - var n = 1;
                                while n<5
                                    option(value=n) #{n++}
                div(class="border-gray-200 border-t py-5 space-y-8")                   
                    h3.text-lg.leading-6.font-medium.text-gray-900 Ubicacion    
                    p(class="text-gray-600") Ubica la propiedad en el mapa
                    #mapa(class="h-96")

                    div
                        p(class="calle")
                    input(type="hidden" name="calle" id="calle")
                    input(type="hidden" name="lat" id="lat")
                    input(type="hidden" name="lng" id="lng")
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")