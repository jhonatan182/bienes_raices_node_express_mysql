extends ../layout/index.pug

block contenido
    div(class="py-20")
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span(class="font-normal") Raices  
        h2(class="text-center text-2xl font-extrabold")= pagina

        if errores
            div(class="max-w-md mx-auto my-10")

                each error in errores
                    p.bg-red-600.text-white.text-sm.text-center.p-2.mb-1.font-bold= error.msg

        div(class="mt-8 mx-auto max-w-md") 
            div(class="bg-white py-8 px-4 shadow")
                form( method="POST" action="/auth/registro" class="space-y-5" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="nombre") Tu nombre
                        input(type="text" id="nombre" placeholder="Tu nombre" name ="nombre" value=nombre ? nombre : '' class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )

                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="email") Email de registro
                        input(type="email" id="email" placeholder="Tu email" name ="email" value=email ? email : '' class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                    
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="password") Password
                        input(type="password" id="password" placeholder="Tu password" name ="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold"  for="repetir_password") Password
                        input(type="password" id="repetir_password" placeholder="Repite tu password" name ="repetir_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"  )
                    
                    input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 cursor-pointer hover:bg-indigo-800 transition-colors p-3 rounded uppercase text-white font-bold")

                    div(class="flex flex-col gap-2 text-gray-500") 
                        a(href="/auth/login") ¿Ya tienes una cuenta?. Inicia Sesión
                        a(href="/auth/olvide-password") Olvide mi password. Recupera tu cuenta